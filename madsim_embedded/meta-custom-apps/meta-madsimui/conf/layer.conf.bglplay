# We have a conf and classes directory, add to BBPATH
BBPATH .= ":${LAYERDIR}"

# We have recipes-* directories, add to BBFILES
BBFILES += "${LAYERDIR}/madsimui/madsimui.bb \
            ${LAYERDIR}/recipes-extended/images/core-image-full-cmdline.bbappend"

BBFILE_COLLECTIONS += "meta-madsimui"
BBFILE_PATTERN_meta-madsimui = "^${LAYERDIR}/"
BBFILE_PRIORITY_meta-madsimui = "7"

LAYERDEPENDS_meta-madsimui = "meta-arm meta-madsimko"
LAYERSERIES_COMPAT_meta-madsimui = "scarthgap"

